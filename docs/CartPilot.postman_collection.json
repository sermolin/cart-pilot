    {
      "name": "Purchase Flow",
      "description": "Complete purchase flow from intent to order. Run these requests in order.",
      "item": [
        {
          "name": "1. Create Intent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set('intent_id', jsonData.id);",
                  "pm.test('Intent created', function() {",
                  "    pm.response.to.have.status(201);",
                  "    pm.expect(jsonData.id).to.be.a('string');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"wireless headphones under $100\",\n  \"session_id\": \"postman-demo-session\",\n  \"metadata\": {\n    \"category\": \"electronics\",\n    \"source\": \"postman\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/intents",
              "host": ["{{base_url}}"],
              "path": ["intents"]
            }
          }
        },
        {
          "name": "2. Get Offers for Intent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.items && jsonData.items.length > 0) {",
                  "    pm.collectionVariables.set('offer_id', jsonData.items[0].id);",
                  "    if (jsonData.items[0].items && jsonData.items[0].items.length > 0) {",
                  "        pm.collectionVariables.set('product_id', jsonData.items[0].items[0].product_id);",
                  "    }",
                  "}",
                  "pm.test('Offers retrieved', function() {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/intents/{{intent_id}}/offers",
              "host": ["{{base_url}}"],
              "path": ["intents", "{{intent_id}}", "offers"]
            }
          }
        },
        {
          "name": "3. Get Offer Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/offers/{{offer_id}}",
              "host": ["{{base_url}}"],
              "path": ["offers", "{{offer_id}}"]
            }
          }
        },
        {
          "name": "4. Create Checkout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set('checkout_id', jsonData.id);",
                  "pm.test('Checkout created', function() {",
                  "    pm.response.to.have.status(201);",
                  "    pm.expect(jsonData.status).to.equal('created');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"offer_id\": \"{{offer_id}}\",\n  \"items\": [\n    {\n      \"product_id\": \"{{product_id}}\",\n      \"quantity\": 1\n    }\n  ],\n  \"idempotency_key\": \"postman-checkout-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/checkouts",
              "host": ["{{base_url}}"],
              "path": ["checkouts"]
            }
          }
        },
        {
          "name": "5. Get Quote",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.test('Quote received', function() {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(jsonData.status).to.equal('quoted');",
                  "    pm.expect(jsonData.total).to.be.an('object');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"product_id\": \"{{product_id}}\",\n      \"quantity\": 1\n    }\n  ],\n  \"customer_email\": \"demo@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/checkouts/{{checkout_id}}/quote",
              "host": ["{{base_url}}"],
              "path": ["checkouts", "{{checkout_id}}", "quote"]
            }
          }
        },
        {
          "name": "6. Request Approval",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.test('Approval requested', function() {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(jsonData.status).to.equal('awaiting_approval');",
                  "    pm.expect(jsonData.frozen_receipt).to.be.an('object');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/checkouts/{{checkout_id}}/request-approval",
              "host": ["{{base_url}}"],
              "path": ["checkouts", "{{checkout_id}}", "request-approval"]
            }
          }
        },
        {
          "name": "7. Approve Checkout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.test('Checkout approved', function() {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(jsonData.status).to.equal('approved');",
                  "    pm.expect(jsonData.approved_by).to.equal('postman-user');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approved_by\": \"postman-user\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/checkouts/{{checkout_id}}/approve",
              "host": ["{{base_url}}"],
              "path": ["checkouts", "{{checkout_id}}", "approve"]
            }
          }
        },
        {
          "name": "8. Confirm Purchase",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set('order_id', jsonData.order_id);",
                  "pm.collectionVariables.set('merchant_order_id', jsonData.merchant_order_id);",
                  "pm.test('Purchase confirmed', function() {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(jsonData.status).to.equal('confirmed');",
                  "    pm.expect(jsonData.order_id).to.be.a('string');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"payment_method\": \"test_card\",\n  \"idempotency_key\": \"postman-confirm-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/checkouts/{{checkout_id}}/confirm",
              "host": ["{{base_url}}"],
              "path": ["checkouts", "{{checkout_id}}", "confirm"]
            }
          }
        }
      ]
    },
