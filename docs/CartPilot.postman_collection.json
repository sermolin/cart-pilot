        {
          "name": "Get Chaos Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{merchant_b_url}}/chaos/events?limit=50",
              "host": ["{{merchant_b_url}}"],
              "path": ["chaos", "events"],
              "query": [
                {"key": "limit", "value": "50"}
              ]
            }
          }
        }
      ]
    },
    {
